<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciceSynthese.PageAjouter">
    <ContentPage.Content>
        <StackLayout Padding="5">

            <Frame  Padding="3" BorderColor="White" CornerRadius="8"  BackgroundColor="Black"  HasShadow="True" Grid.ColumnSpan="2">
                <Label Text="Ajouter une tâche" FontSize="16" TextColor="White" FontAttributes="Bold" VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" Grid.ColumnSpan="2"/>
            </Frame>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                <Button Text="Retour" BorderColor="DarkBlue" BackgroundColor="DodgerBlue" TextColor="White" FontAttributes="Bold" CornerRadius="2" Clicked="OnButtonRetourClicked" Grid.Column="0"/>
                <Button Text="Valider" BorderColor="DarkBlue" BackgroundColor="DodgerBlue" TextColor="White" FontAttributes="Bold" CornerRadius="2" Clicked="OnButtonValiderClicked" Grid.Column="1"/>
            </Grid>






            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                

                <Label Text="Titre" FontSize="13" HorizontalOptions="End" TextColor="Black" Grid.Row="0" Grid.Column="0"/>
                <Label Text="Description" FontSize="13" HorizontalOptions="End" TextColor="Black" Grid.Row="2" Grid.Column="0"/>


                <DatePicker x:Name="dtpDate" Format="dd/MM/yyyy">
                
                </DatePicker>
                
                <Entry x:Name="entTitre"  MaxLength="40" Text="Titre" TextColor="White" BackgroundColor="#2c3e50" IsSpellCheckEnabled="false" ClearButtonVisibility="WhileEditing" Grid.Row="0" Grid.Column="1"/>
                <Entry x:Name="entDescription" MaxLength="40" Text="Description" TextColor="White" BackgroundColor="#2c3e50" IsSpellCheckEnabled="false" ClearButtonVisibility="WhileEditing" Grid.Row="2" Grid.Column="1"/>
               

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>